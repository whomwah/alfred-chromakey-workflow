{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "typeRoots": ["./src/types", "./node_modules/@types", "./node_modules"]
  },
  "include": ["src/**/*"]
}
